<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} - %highlight(%msg) %n
            </pattern>
        </encoder>
    </appender>

    <logger name="src.main.java.tbank" level="ERROR" />
    <logger name="src.main.java.tban" level="INFO" />
    <logger name="src.main.java.tban" level="WARN" />
    <logger name="src.main.java.tban" level="DEBUG" />

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>